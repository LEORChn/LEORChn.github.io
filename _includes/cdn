{%- comment -%}

用法：（若非外链则自带 CDN 加速）

	{% include cdn src="1.jpg" %}
	
	{% include cdn src="/2.jpg" %}
	
	// 下列情况会原封不动还回去
	{% include cdn src="//www.github.com/favicon.ico" %}
	{% include cdn src="http://www.github.com/favicon.ico" %}
	{% include cdn src="https://www.github.com/favicon.ico" %}

{%- endcomment -%}
{%- assign output = '' -%}
{%- capture nooutput -%}
	{% assign paramurl = include.src %}
	{% assign cdnurl = '' %}
	{% case paramurl | slice: 0, 6 %}
		{% when 'http://' %}
		{% when 'https:/' %}
		{% else %}
			{% if paramurl | slice: 0, 1 != '//' %}
				{% assign cdnurl = cdnurl | append: 'https://cdn.jsdelivr.net/gh/LEORChn/LEORChn.github.io' %}
			{% endif %}
	{% endcase %}
	{% assign srcprefix = paramurl | slice: 0 %}
	{% if srcprefix != '/' %}
		{% assign cdnurl = cdnurl | append: page.url %}
	{% endif %}
	{% assign output = cdnurl | append: paramurl %}
{%- endcapture -%}
{{ output }}